#include <stdio.h>
int main()
{
    int a;
    printf ("Enter a number:");
    scanf ("%d",&a);
    switch (a%2)
    {
    case 0:
        printf ("The given number %d is Even.",a);
        break;
    case 1:
        printf ("The given number %d is Odd.",a);
        break;
    default:
        printf ("The number is invalid.");
    }
    return 0;
}
