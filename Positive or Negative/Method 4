#include <stdio.h>
int main()
{
    int a;
    printf ("Enter an integer: ");
    scanf ("%d",&a);
    switch (a>0)
    {
    case 1:
        printf("The given number %d is Positive\n",a);
        break;
    default:
        switch (a<0)
        {
        case 1:
            printf("The given number %d is Negative\n",a);
            break;
        default:
            printf("The given number is 0\n");
        }
    }
    return 0;
}
