#include <stdio.h>
int prime (int n)
{
    if (n<=1)
        return 0;
    for (int i=2; i*i<=n; i++)
    {
        if (n%i==0)
            return 0;
    }
    return 1;
}
int main()
{
    int n;
    printf("Enter the number: ");
    scanf("%d",&n);
    for (int i=2; i<=n/2; i++)
    {
        if (prime(i) && prime(n-i))
        {
            printf("The number can be expressed\n");
            return 0;
        }
    }
    printf("The number can't be expressed\n");
    return 0;
}
